model User {
  id          String  @id @default(cuid())
  username    String? @unique
  email       String? @unique
  phonenumber String
  password    String

  // Optional for WebAuthn support

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}
